---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import TRPC from "./icons/Trpc.astro";
import REACTQUERY from "./icons/ReactQuery.astro";
import HEXAGONALARQ from "./icons/HexagonalArquitecture.astro";
import Redirect from "./icons/Redirect.astro";
import Drizzle from "./icons/Drizzle.astro";
import Shadcn from "./icons/Shadcn.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-gray-900 text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-blue-600 text-white",
    icon: Tailwind,
  },
  TRPC: {
    name: "tRPC",
    class: "bg-purple-600 text-white",
    icon: TRPC,
  },
  DRIZZLE: {
    name: "Drizzle",
    class: "bg-green-700 text-white",
    icon: Drizzle,
  },
  SHADCN: {
    name: "Shadcn",
    class: "bg-gray-600 text-white",
    icon: Shadcn,
  },
  REACTQUERY: {
    name: "React Query",
    class: "bg-indigo-600 text-white",
    icon: REACTQUERY,
  },
  HEXAGONALARQ: {
    name: "Arquitectura Hexagonal",
    class: "bg-red-600 text-white",
    icon: HEXAGONALARQ,
  },
};

const PROJECTS = [
  {
    title: "Reelevante - Biblioteca Inteligente",
    description:
      "Plataforma digital que revoluciona el acceso a bibliotecas, permitiendo a los usuarios descubrir, reservar y disfrutar de libros de forma interactiva. Cuenta con recomendaciones personalizadas.",
    link: "https://ui-admin-web.vercel.app/es",
    github: "https://github.com/IsmaelP001/releevante-platform",
    image: "/projects/reelevante.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.SHADCN, TAGS.REACTQUERY],
  },
  {
    title: "Cartago - Fundas Personalizadas",
    description:
      "Tienda online de accesorios para móviles donde puedes diseñar tu funda única. Ofrece una experiencia interactiva con diseños exclusivos y garantía de calidad.",
    link: process.env.CASE_STORE_DOMAIN!,
    github: "https://github.com/IsmaelP001/CasesStore",
    image: "/projects/cases-store.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.TRPC, TAGS.DRIZZLE],
  },
  {
    title: "ProjectManager - Gestión de Proyectos",
    description:
      "Aplicación para administrar proyectos en el sector de la construcción, que permite asignar tareas, monitorear el progreso y analizar el rendimiento en tiempo real.",
    github: "https://gitfront.io/r/ismaelperez/C69vLgJdPz1p/task-managment",
    link: "https://task-managment-gray-nu.vercel.app",
    image: "/projects/project-manager.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.TRPC, TAGS.DRIZZLE],
  },
];
---

<section class=`py-12  w-full ${Astro.props.className} `>


  <div class=`grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8  ${Astro.props.className}`>
    {PROJECTS.map(({ image, title, description, tags, link, github }) => (
<div class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg transition-transform duration-300 ease-out hover:ease-in hover:shadow-2xl hover:scale-[1.02] h-full flex flex-col">
  <div class="relative">
          <img
            src={image}
            alt={`Imagen de ${title}`}
            class="w-full h-52 object-cover"
            loading="lazy"
          />
          <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-transparent to-black opacity-40"></div>
          <div class="absolute bottom-0 left-0 w-full p-4 flex flex-wrap gap-2">
            {tags.slice(0, 2).map((tag) => (
              <span class={`flex items-center gap-1 rounded-full text-xs py-1 px-2 ${tag.class}`}>
                <tag.icon class="w-3 h-3" />
                {tag.name}
              </span>
            ))}
            {tags.length > 2 && (
              <span class="rounded-full bg-gray-700 text-white text-xs py-1 px-2 flex items-center">
                +{tags.length - 2}
              </span>
            )}
          </div>
        </div>
        
        <div class="p-6 flex-1 flex flex-col">
          <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">
            {title}
          </h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm mb-6 flex-1">
            {description}
          </p>
          
          <div class="mt-auto pt-4 border-t border-gray-200 dark:border-gray-700 flex justify-between">
            {github && (
              <a href={github} class="flex items-center gap-2 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 text-sm font-medium transition-colors duration-200">
                <GitHub class="w-5 h-5" />
                Código
              </a>
            )}
            {link && (
              <a href={link} class="flex items-center gap-2 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 text-sm font-medium transition-colors duration-200 ml-auto">
                <Redirect class="w-5 h-5" />
                Demo
              </a>
            )}
          </div>
        </div>
        
        <div class="overflow-hidden">
          <div class="flex flex-wrap gap-1 p-3 bg-gray-50 dark:bg-gray-900">
            {tags.map((tag) => (
              <span class="text-xs font-medium text-gray-600 dark:text-gray-400">#{tag.name.replace(/\s+/g, '')}</span>
            ))}
          </div>
        </div>
      </div>
    ))}
  </div>
  
</section>